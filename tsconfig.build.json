{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "pretty": true,
    "newLine": "lf",
    "outDir": "dist",
    "baseUrl": "./",
    "rootDirs": [
      "./src/"
    ],
    "types": [
      "node",
      "jest"
    ],
    "paths": {
      "#/*": [
        "./src/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "src/*",
    ],
    "lib": [
      "ESNext.BigInt",
    ]
  },
  "include": [
    "./src/"
  ],
  "exclude": [
    "./script/",
    "./test/"
  ]
}
