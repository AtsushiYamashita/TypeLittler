{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "pretty": true,
    "newLine": "lf",
    "outDir": "dist",
    "baseUrl": "./",
    "rootDirs": [
      "./src/"
    ],
    "types": [
      "node",
      "jest"
    ],
    "paths": {
      "#/*": [
        "./src/*",
        "./src/functions/*",
        "./src/classes/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "./dist/*",
      "./dist/**/*",
    ]
  },
  "include": [
    "./src/"
  ],
  "exclude": [
    "./script/",
    "./tests/"
  ]
}
