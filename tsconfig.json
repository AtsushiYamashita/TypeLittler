{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "pretty": true,
    "newLine": "lf",
    "outDir": "dist",
    "baseUrl": "./",
    "types": [
      "node",
      "jest"
    ],
    "paths": {
      "#/*": [
        "./dist/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "./dist/*.d.ts",
      "./dist/**/*.d.ts",
    ]
  }
}
