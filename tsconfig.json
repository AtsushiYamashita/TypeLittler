{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "pretty": true,
    "newLine": "lf",
    "outDir": "dist",
    "baseUrl": "./",
    "types": [
      "node",
      "jest"
    ],
    "paths": {
      "#littler/*": [
        "./dist/*",
        "./dist/functions/*",
        "./dist/classes/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "./dist/*",
      "./dist/**/*",
    ]
  }
}
